<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      

	    <%= f.label :role, "Expert", :value => "true"  %>
	    <%= f.radio_button :role, true %>
	    <%= f.label :role, "Pet Owner", :value => "false" %>
	    <%= f.radio_button :role, false %></br>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", static_pages_home_path %></p>
  </div>
</div>