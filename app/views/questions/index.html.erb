<h1>Listing questions</h1>

<table>
  <thead>
    <tr>
      <th>Pet owner</th>
      <th>Content</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.pet_owner_id %></td>
        <td><%= question.content %></td>
        <td><%= question.category %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<td><%= link_to 'Answer', new_answer_path(:question => question) %></td>
		<td><%= link_to 'ShowAnswer', answers_path(:question_id => question) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

